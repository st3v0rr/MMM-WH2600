{
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		}
	},
	"plugins": [
		"prettier"
	],
	"extends": [
		"prettier"
	],
	"rules": {
		"quotes": [
			"error",
			"double"
		],
		"max-len": [
			"error",
			250
		],
		"curly": "error",
		"camelcase": [
			"error",
			{
				"properties": "never"
			}
		],
		"no-trailing-spaces": [
			"error"
		],
		"no-irregular-whitespace": [
			"error"
		]
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	}
}
