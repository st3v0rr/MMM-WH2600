{% if status %}
  <div>{{ status }}</div>
{% else %}
  <div class="wh2600-container" style="--wh2600-switch-interval: {{ config.tempSwitchInterval }}ms;">
    <div class="wh2600-dashboard">

      <div class="wh2600-panel">
        <div class="wh2600-panel-title">{{ indoorSensorLabel }}</div>
        <div class="wh2600-temp-container">
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-thermometer"></i></span>
            <span class="wh2600-metric-value">{{ indoorSensorTemperature }}<span class="wh2600-unit">째C</span></span>
          </div>
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-humidity"></i></span>
            <span class="wh2600-metric-value">{{ indoorSensorHumidity }}<span class="wh2600-unit">%</span></span>
          </div>
        </div>

        <div class="wh2600-panel-title">{{ outdoorSensorLabel }}</div>
        <div class="wh2600-temp-container">
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-thermometer"></i></span>
            <span class="wh2600-metric-value">{{ outdoorSensorTemperature }}<span class="wh2600-unit">째C</span></span>
          </div>
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-humidity"></i></span>
            <span class="wh2600-metric-value">{{ outdoorSensorHumidity }}<span class="wh2600-unit">%</span></span>
          </div>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-alien"></i></span>
          <span class="wh2600-metric-value">{{ perceivedTemperature }}<span class="wh2600-unit">째C</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-barometer"></i></span>
          <span class="wh2600-metric-value">{{ atmosphericPressure }}<span class="wh2600-unit">hPa</span></span>
        </div>
      </div>

      <div class="wh2600-panel">
        <div class="wh2600-panel-title">{{ translations.wind }}</div>
        <div class="wh2600-metric-row">
          <div class="wh2600-metric-icon"><i class="wi wi-windy"></i></div>
          <div class="wh2600-metric-value">{{ data.windspeed }}<span class="wh2600-unit">m/s</span></div>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-wind-beaufort-{{ beaufort }}"></i></span>
          <span class="wh2600-metric-value">{{ data.gustspeed }}<span class="wh2600-unit">m/s</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-day-windy"></i></span>
          <span class="wh2600-metric-value">{{ data.daymaxwind }}<span class="wh2600-unit">m/s</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-wind towards-{{ data.winddir }}-deg"></i></span>
          <span class="wh2600-metric-value">{{ data.winddir }}<span class="wh2600-unit">째 {{ windDirText }}</span></span>
        </div>
      </div>

      <div class="wh2600-panel">
        <div class="wh2600-panel-title">{{ translations.uvindex }}</div>
        <div class="wh2600-metric-row" style="color: {{ uvIndexColor }}">
          <span class="wh2600-metric-icon"><i class="wi wi-hot"></i></span>
          <span class="wh2600-metric-value">{{ data.uvi }}</span>
        </div>

        <div class="wh2600-rain-section">
          <div class="wh2600-panel-title">{{ translations.rain }}</div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-clock"></i></span>
            <span class="wh2600-metric-value">{{ data.rainrate }}<span class="wh2600-unit">mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar-day"></i></span>
            <span class="wh2600-metric-value">{{ data.rainday }}<span class="wh2600-unit">mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar-week"></i></span>
            <span class="wh2600-metric-value">{{ data.rainweek }}<span class="wh2600-unit">mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar"></i></span>
            <span class="wh2600-metric-value">{{ data.rainmonth }}<span class="wh2600-unit">mm</span></span>
          </div>
        </div>
      </div>

    </div>
  </div>
{% endif %}
