{% if status %}
  <div>{{ status }}</div>
{% else %}
  <div class="wh2600-container" style="--wh2600-switch-interval: {{ config.tempSwitchInterval }}ms;">
    <div class="wh2600-dashboard">

      <div class="wh2600-panel-temp">
        <div class="wh2600-panel-title">{{ indoorSensorLabel }}</div>
        <div class="wh2600-temp-container">
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-thermometer"></i></span>
            <span class="wh2600-metric-value medium bright">{{ indoorSensorTemperature | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright">°C</span></span>
          </div>
          {% if ventilationRecommendation %}
            <div class="wh2600-block">
              <span class="wh2600-metric-icon"><i class="wi wi-strong-wind xsmall wh2600-ventilation-badge wh2600-ventilation-score-{{ ventilationRecommendation.score }}"></i></span>
            </div>
          {% endif %}
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-humidity"></i></span>
            <span class="wh2600-metric-value medium bright">{{ indoorSensorHumidity }}<span class="wh2600-unit small bright">%</span></span>
          </div>
        </div>

        <div class="wh2600-panel-title">{{ outdoorSensorLabel }}</div>
        <div class="wh2600-temp-container">
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-thermometer"></i></span>
            <span class="wh2600-metric-value medium bright">{{ outdoorSensorTemperature | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright">°C</span></span>
          </div>
          <div class="wh2600-block">
            <span class="wh2600-metric-icon"><i class="wi wi-humidity"></i></span>
            <span class="wh2600-metric-value medium bright">{{ outdoorSensorHumidity }}<span class="wh2600-unit small bright">%</span></span>
          </div>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-alien small"></i></span>
          <span class="wh2600-metric-value medium bright">{{ perceivedTemperature | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright">°C</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-barometer small"></i></span>
          <span class="wh2600-metric-value medium bright">{{ atmosphericPressure }}<span class="wh2600-unit small bright"> hPa</span></span>
        </div>
      </div>

      <div class="wh2600-panel">
        <div class="wh2600-panel-title">{{ translations.wind }}</div>
        <div class="wh2600-metric-row">
          <div class="wh2600-metric-icon"><i class="wi wi-windy small"></i></div>
          <div class="wh2600-metric-value medium bright">{{ data.windspeed | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright"> m/s</span></div>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-wind-beaufort-{{ beaufort }} small"></i></span>
          <span class="wh2600-metric-value medium bright">{{ data.gustspeed | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright"> m/s</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon"><i class="wi wi-day-windy small"></i></span>
          <span class="wh2600-metric-value medium bright">{{ data.daymaxwind | round(1) | replace(".", ",") }}<span class="wh2600-unit small bright"> m/s</span></span>
        </div>
        <div class="wh2600-metric-row">
          <span class="wh2600-metric-icon">
            <i
              class="wi wi-wind xlarge wh2600-wind-direction bright"
              style="--wh2600-winddir-from: {{ windDirFrom }}deg; --wh2600-winddir-to: {{ windDirTo }}deg;"
            ></i>
          </span>
          <span class="wh2600-metric-value bright">{{ windDirText }}</span>
        </div>
      </div>

      <div class="wh2600-panel">
        <div class="wh2600-panel-title">{{ translations.uvindex }}</div>
        <div class="wh2600-metric-row" style="color: {{ uvIndexColor }}">
          <span class="wh2600-metric-icon"><i class="wi wi-hot small"></i></span>
          <span class="wh2600-metric-value medium">{{ data.uvi }}</span>
        </div>

        <div class="wh2600-rain-section">
          <div class="wh2600-panel-title">{{ translations.rain }}</div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-clock"></i></span>
            <span class="wh2600-metric-value bright">{{ data.rainrate }}<span class="wh2600-unit xsmall bright"> mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar-day"></i></span>
            <span class="wh2600-metric-value bright">{{ data.rainday }}<span class="wh2600-unit xsmall bright"> mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar-week"></i></span>
            <span class="wh2600-metric-value bright">{{ data.rainweek }}<span class="wh2600-unit xsmall bright"> mm</span></span>
          </div>
          <div class="wh2600-metric-row">
            <span class="wh2600-metric-icon"><i class="fa fa-calendar"></i></span>
            <span class="wh2600-metric-value bright">{{ data.rainmonth }}<span class="wh2600-unit xsmall bright"> mm</span></span>
          </div>
        </div>
      </div>

    </div>
  </div>
{% endif %}
